<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/NumberButton"
                android:id="@+id/clear_btn"
                android:text="AC"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/bracket_left_btn"
                android:text="("
                />
            <TextView
                style="@style/NumberButton"
                android:text=")"
                android:id="@+id/bracket_right_btn"
                />
            <TextView
                style="@style/NumberButton"
                android:text="/"
                android:id="@+id/division_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/ActionButton"
                android:text="7"
                android:id="@+id/btn_7"
                />
            <TextView
                style="@style/ActionButton"
                android:text="8"
                android:id="@+id/btn_8"
                />
            <TextView
                style="@style/ActionButton"
                android:text="9"
                android:id="@+id/btn_9"
                />
            <TextView
                style="@style/NumberButton"
                android:text="*"
                android:id="@+id/mult_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/ActionButton"
                android:text="4"
                android:id="@+id/btn_4"
                />
            <TextView
                style="@style/ActionButton"
                android:text="5"
                android:id="@+id/btn_5"
                />
            <TextView
                style="@style/ActionButton"
                android:text="6"
                android:id="@+id/btn_6"
                />
            <TextView
                style="@style/NumberButton"
                android:text="+"
                android:id="@+id/plus_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/ActionButton"
                android:text="1"
                android:id="@+id/btn_1"
                />
            <TextView
                style="@style/ActionButton"
                android:text="2"
                android:id="@+id/btn_2"
                />
            <TextView
                style="@style/ActionButton"
                android:text="3"
                android:id="@+id/btn_3"
                />
            <TextView
                style="@style/NumberButton"
                android:text="-"
                android:id="@+id/minus_btn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/ActionButton"
                android:text="."
                android:id="@+id/doth_btn"
                />
            <TextView
                style="@style/ActionButton"
                android:text="0"
                android:id="@+id/btn_0"
                />
            <TextView
                style="@style/ActionButton"
                android:text="Back"
                android:id="@+id/back_btn"
                />
            <TextView
                style="@style/NumberButton"
                android:text="="
                android:id="@+id/equally_btn"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>